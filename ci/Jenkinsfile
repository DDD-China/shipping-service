pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                sh './gradlew test'
            }
        }
        stage('Build') {
            steps {
                sh './gradlew build'
            }
        }
        stage('Gen Image') {
            steps {
                sh './ci/genImage.sh'
            }
        }
        stage('Deploy') {
            steps {
                sh './ci/deploy.sh'
            }
        }
    }
}